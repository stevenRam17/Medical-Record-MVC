@using Microsoft.AspNetCore.Mvc.TagHelpers
@model ExpedienteMedico.Models.ViewModels.TreatmentVM

<form method="post">
    <input asp-for="@Model.HistoryId" hidden />
    <h2 class="text-primary p-1">Create new Treatment</h2>
    <div class="border p-2 mt-3">
        <div class="row pb-1"></div>

        <div class="mb-3">
            <label asp-for="@Model.Treatment.Name"></label>
            <input asp-for="@Model.Treatment.Name" class="form-control">
            <span asp-validation-for="@Model.Treatment.Name" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="@Model.Treatment.Description"></label>
            <textarea asp-for="@Model.Treatment.Description" rows="3" class="form-control"></textarea>
            <span asp-validation-for="@Model.Treatment.Description" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Create</button>
        <a asp-controller="Treatment" asp-action="Index" class="btn btn-secondary">Back to list</a>
    </div>
</form>

<script src="https://cdn.tiny.cloud/1/15ppzj17t7o6klw3o2ryc501mp6jdbk1079w8wuxbsupg3u3/tinymce/6/tinymce.min.js" referrerpolicy="origin"></script>

<script>
    tinymce.init({
        selector: 'textarea',
        plugins: 'advlist autolink lists link image charmap preview anchor pagebreak',
        toolbar_mode: 'floating',
    });
</script>
