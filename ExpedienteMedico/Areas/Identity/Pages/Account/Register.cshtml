@page
@using ExpedienteMedico.Utility
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4">
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h2>Create a new account.</h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-floating text-info">
                <input asp-for="Input.CompleteName" class="form-control text-dark" aria-required="true" />
                <label asp-for="Input.CompleteName"></label>
                <span asp-validation-for="Input.CompleteName" class="text-danger"></span>
            </div>
            <br />
            <div class="form-floating text-info">
                <input asp-for="Input.Email" class="form-control text-dark" autocomplete="username" aria-required="true" />
                <label asp-for="Input.Email"></label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <br />
            <div class="form-floating text-info">
                <input asp-for="Input.PhoneNumber" class="form-control text-dark" aria-required="true" />
                <label asp-for="Input.PhoneNumber"></label>
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>
            <br />
            <div class="form-floating text-info">
                <input asp-for="Input.Password" class="form-control text-dark" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.Password"></label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <br />
            <div class="form-floating text-info">
                <input asp-for="Input.ConfirmPassword" class="form-control text-dark" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.ConfirmPassword"></label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <br />
            <div class="form-floating text-info">
                <input asp-for="Input.UserId" class="form-control text-dark" aria-required="true" />
                <label asp-for="Input.UserId"></label>
                <span asp-validation-for="Input.UserId" class="text-danger"></span>
            </div>
            <br />
            
            @if (User.IsInRole(Roles.Role_Admin))
            {

                <div class="form-floating py-2">
                    <select asp-for="Input.Role" asp-items="@Model.Input.RoleList" class="form-select">
                        <option enabled selected>--Select Role--</option>
                    </select>
                </div>
            }
            


            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-priamry text-success">Register</button>
        </form>
    </div>

</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <></>
}
